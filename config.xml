<?xml version='1.0' encoding='utf-8'?>
<widget id="be.ugent.chronicals" version="1.0.2" versionCode="101" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/3.0">
    <name>Chronicals</name>
    <description>
        A headache diary app
    </description>
    <icon src="icon.png" />
    <author>
        Kiani Lannoye and Gilles Vandewiele
    </author>
    <preference name="orientation" value="portrait" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <feature name="http://api.phonegap.com/1.0/notification" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <platform name="ios">
        <icon src="icon.png" />
    </platform>
    <platform name="android" />
    <allow-navigation href="http://tw06v033.ugent.be/*" />
    <allow-navigation href="http://*/*" />
    <access origin="http://localhost/*" />
    <access origin="*" />
    <engine name="browser" spec="^5.0.1" />
    <engine name="android" spec="^6.3.0" />
	<plugin name="cordova-plugin-googleplus" source="npm">
	  <variable name="REVERSED_CLIENT_ID" value="com.googleusercontent.apps.175384751988-oh6m3dr3hg6i2ou68svi1rj7145lo4hf" />
	  <variable name="WEB_APPLICATION_CLIENT_ID" value="175384751988-oh6m3dr3hg6i2ou68svi1rj7145lo4hf.apps.googleusercontent.com" />
	</plugin>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-local-notification" spec="^0.9.0-beta.2" />
    <plugin name="cordova-plugin-mauron85-background-geolocation" spec="^2.3.3">
        <variable name="GOOGLE_PLAY_SERVICES_VERSION" value="+" />
        <variable name="ICON" value="@mipmap/icon" />
        <variable name="SMALL_ICON" value="@mipmap/icon" />
        <variable name="ACCOUNT_NAME" value="@string/app_name" />
        <variable name="ACCOUNT_LABEL" value="@string/app_name" />
        <variable name="ACCOUNT_TYPE" value="$PACKAGE_NAME.account" />
        <variable name="CONTENT_AUTHORITY" value="$PACKAGE_NAME" />
    </plugin>
</widget>
